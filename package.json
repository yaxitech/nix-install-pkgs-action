{
  "name": "nix-profile-action",
  "private": true,
  "version": "1.0.0",
  "description": "A GitHub Action to install an ephemeral Nix profile",
  "main": "index.js",
  "scripts": {
    "build": "tsc && ncc build -o dist/main lib/main.js && ncc build -o dist/post lib/post.js",
    "format": "prettier --write **/*.ts",
    "check-format": "prettier --check **/*.ts",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yaxitech/nix-profile-action"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "YAXI Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.27",
    "@vercel/ncc": "^0.31.1",
    "jest": "^27.0.2",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.6",
    "typescript": "^4.4.4"
  }
}
